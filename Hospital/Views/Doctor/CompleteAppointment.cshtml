<h1>Complete Appointment with @Model.Name</h1>

<form action="/Doctor/MakeAppointment">
    <div class="form-group">
        <label for="patientName">Patient Name:</label>
        <input type="text" class="form-control" name="PatientName" required>
        <input type="hidden" name="DoctorId" value="@Model.Id"
    </div>
    <div class="form-group">
        <label for="appointmentDate">Appointment Date:</label>
        <input type="date" class="form-control"  name="AppointmentDate" required>
    </div>
    <div class="form-group">
        <label for="appointmentTime">Appointment Time:</label>
        <input type="time" class="form-control" name="AppointmentTime" required>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Complete Appointment</button>
</form>